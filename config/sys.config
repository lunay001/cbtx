[{lager, [
	{log_root, "logs/"},

	%% Default handlers for lager/lager_event
	{handlers, [
		{lager_console_backend, [{level, info}]},
		{lager_file_backend, [{file, "error.log"}, {level, error}]},
		{lager_file_backend, [{file, "console.log"}, {level, info}]}
	]},

	%% Any other sinks
	{extra_sinks,
		[
			{audit_lager_event,
				[{handlers,
					[{lager_file_backend,
						[{file, "sink1.log"},
							{level, info}
						]
					}]
				},
					{async_threshold, 500},
					{async_threshold_window, 50}]
			}]
	}
]
}
].